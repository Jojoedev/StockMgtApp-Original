@page
@model StockMgtApp.Pages.Logic.IndexModel
@{
}
<div> <a class="btn btn-outline-primary" asp-area="" asp-page="/Logic/ReceiveItem"> <i class="fa-solid fa-plus"></i> Receive Stock</a></div>
<div>
    @if (Model.StockItem.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>StockName</th>
                    <th>Description</th>
                    <th>Quantity</th>
                    <th>Unit cost</th>
                    <th>Value (N)</th>
                    <th>Current Issue</th>
                    <th>StockBalance</th>
                    <th>Issue To Date</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.StockItem)

                {
                <tr>
                    <td>@item.Id </td> 
                    <td>@item.Category.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Quantity</td>
                    <td>@item.Unitprice</td>
                    <td>@item.Total</td>
                    <td>@item.IssueOut</td>
                    <td>@item.StockBalance</td>
                    <td>@item.NewTotal</td>
                    <td> <a href="/Logic/Modify?id=@item.Id" class="btn btn-outline-warning"> Edit <i class="fa-regular fa-pen-to-square"></i></a></td>
                    <td> <a href="/Logic/Delete?id=@item.Id" onclick=" return confirm ('Do you want to delete this?')" class="btn btn-outline-danger">Delete </a></td>
                    <td> <a href="/Logic/Details?id=@item.Id" class="btn btn-outline-info">Details </a> </td>
                    <td> <a href="/Logic/Issue?id=@item.Id" class="btn btn-outline-primary">Issue</a></td>

                </tr>
                }
            </tbody>

        </table>

    }
    else
    {
        <h3>No List exists!</h3>
    }
        
</div>
